rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a member of the room
    function isRoomMember(roomId) {
      return exists(/databases/$(database)/documents/rooms/$(roomId)/players/$(request.auth.uid));
    }
    
    // Helper function to check if user is the room owner
    function isRoomOwner(roomId) {
      return get(/databases/$(database)/documents/rooms/$(roomId)).data.ownerId == request.auth.uid;
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      // Anyone authenticated can create a room
      allow create: if isAuthenticated();
      
      // Anyone can read room data if they know the room code (for joining)
      allow read: if isAuthenticated();
      
      // Allow update if:
      // 1. User is a room member, OR
      // 2. User is joining (room in lobby, not full), OR
      // 3. Owner is starting the game (changing status from lobby to playing)
      allow update: if isAuthenticated() && (
        isRoomMember(roomId) ||
        (
          resource.data.status == 'lobby' &&
          request.resource.data.status == 'lobby' &&
          resource.data.playerOrder.size() < 4
        ) ||
        (
          isRoomOwner(roomId) &&
          resource.data.status == 'lobby' &&
          request.resource.data.status == 'playing'
        ) ||
        (
          isRoomOwner(roomId) &&
          resource.data.status == 'roundEnd' &&
          request.resource.data.status == 'playing'
        )
      );
      
      // Only owner can delete room
      allow delete: if isAuthenticated() && isRoomOwner(roomId);
      
      // Players subcollection
      match /players/{playerId} {
        // Authenticated users can create their player doc when joining
        allow create: if isAuthenticated() && request.auth.uid == playerId;
        
        // Allow read if:
        // 1. User is a room member, OR
        // 2. Room is in lobby (for checking if can join)
        allow read: if isAuthenticated() && (
          isRoomMember(roomId) ||
          get(/databases/$(database)/documents/rooms/$(roomId)).data.status == 'lobby'
        );
        
        // Allow update if:
        // 1. Player is updating their own data, OR
        // 2. Room owner is updating player data when starting new round (status is lobby or roundEnd), OR
        // 3. Room member is updating hasDrawnThisTurn during game (when turn changes)
        allow update: if isAuthenticated() && (
          request.auth.uid == playerId ||
          (
            isRoomOwner(roomId) &&
            (
              // Owner can update when room is in lobby (starting first game)
              get(/databases/$(database)/documents/rooms/$(roomId)).data.status == 'lobby' ||
              // Owner can update when room is in roundEnd (starting next round)
              get(/databases/$(database)/documents/rooms/$(roomId)).data.status == 'roundEnd'
            ) &&
            // Owner can update score, hasDrawnThisTurn, and isBlocked when starting new round
            // All other fields must remain unchanged
            request.resource.data.name == resource.data.name &&
            request.resource.data.isReady == resource.data.isReady &&
            request.resource.data.photoURL == resource.data.photoURL &&
            (request.resource.data.joinedAt == resource.data.joinedAt ||
             (!('joinedAt' in request.resource.data) && !('joinedAt' in resource.data)))
          ) ||
          (
            isRoomMember(roomId) &&
            get(/databases/$(database)/documents/rooms/$(roomId)).data.status == 'playing' &&
            // Other members can only update hasDrawnThisTurn and isBlocked during game
            // All other fields must remain unchanged
            request.resource.data.name == resource.data.name &&
            request.resource.data.score == resource.data.score &&
            request.resource.data.isReady == resource.data.isReady &&
            request.resource.data.photoURL == resource.data.photoURL &&
            (request.resource.data.joinedAt == resource.data.joinedAt ||
             (!('joinedAt' in request.resource.data) && !('joinedAt' in resource.data)))
          )
        );
        
        // Only the player can delete their own data
        allow delete: if isAuthenticated() && request.auth.uid == playerId;
      }
      
      // Hands subcollection - private to each player
      match /hands/{playerId} {
        // Allow create if:
        // 1. The player is creating their own hand, OR
        // 2. Owner is creating hands for room members (when starting game)
        allow create: if isAuthenticated() && (
          (request.auth.uid == playerId && isRoomMember(roomId)) ||
          (isRoomOwner(roomId) && exists(/databases/$(database)/documents/rooms/$(roomId)/players/$(playerId)))
        );
        
        // Room members can read all hands (to show card count to all players)
        allow read: if isAuthenticated() && isRoomMember(roomId);
        
        // Only the player can update their own hand
        allow update: if isAuthenticated() && request.auth.uid == playerId;
        
        // Only the player can delete their own hand
        allow delete: if isAuthenticated() && request.auth.uid == playerId;
      }
      
      // Game state subcollection
      match /state/{docId} {
        // Room members can read state
        allow read: if isAuthenticated() && isRoomMember(roomId);
        
        // Room members or owner can write state (transactions handle concurrency)
        allow write: if isAuthenticated() && (isRoomMember(roomId) || isRoomOwner(roomId));
      }
      
      // Melds subcollection
      match /melds/{meldId} {
        // Room members can read melds
        allow read: if isAuthenticated() && isRoomMember(roomId);
        
        // Room members can create melds
        allow create: if isAuthenticated() && isRoomMember(roomId);
        
        // Allow adding cards to existing meld (layoff) - only append cards, keep owner
        allow update: if isAuthenticated() && isRoomMember(roomId) &&
          request.resource.data.ownerUid == resource.data.ownerUid &&
          request.resource.data.cards.size() == resource.data.cards.size() + 1;
        
        // Still block deletes
        allow delete: if false;
      }
      
      // Chat subcollection (optional)
      match /chat/{msgId} {
        // Room members can read chat
        allow read: if isAuthenticated() && isRoomMember(roomId);
        
        // Room members can create messages
        allow create: if isAuthenticated() && 
                       isRoomMember(roomId) && 
                       request.resource.data.uid == request.auth.uid;
        
        // Only message owner can update/delete
        allow update, delete: if isAuthenticated() && 
                               isRoomMember(roomId) && 
                               resource.data.uid == request.auth.uid;
      }
    }
  }
}
